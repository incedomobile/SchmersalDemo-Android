<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.schmersaldemo.mango">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.schmersaldemo.MangoApplication"
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".sapcustomers.SAPCustomersActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".view.Register"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".biometric.DeviceAuthPrompt"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".view.GeneralSettings"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".view.AddLoginAccount"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
        </activity>
        <activity
                android:name=".view.Login"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
        </activity>
        <activity
                android:name=".view.Splash"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".view.MainActivity"
                android:label="@string/app_name"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>